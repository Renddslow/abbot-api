{
  "name": "abbot-api",
  "version": "0.1.0",
  "private": false,
  "description": "A server for utilizing the PCO ecosystem to manage mentoring/coaching relationships.",
  "repository": "https://github.com/Renddslow/abbot-api",
  "license": "MIT",
  "author": "Matt McElwee <mubatt@wyopub.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "node build.js",
    "start": "run-p watch server",
    "server": "nodemon -r dotenv/config dist/index.js",
    "prewatch": "yarn build",
    "watch": "watchlist src -- yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "prettier": "@dmsi/prettier-config",
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "concurrency": 4,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "1m"
  },
  "devDependencies": {
    "@dmsi/prettier-config": "^1.3.0",
    "@types/node": "^14.14.22",
    "ava": "^3.15.0",
    "esbuild": "^0.8.39",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "watchlist": "^0.2.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "catchify": "^2.6.1",
    "cheerio": "^1.0.0-rc.5",
    "dot-prop": "^6.0.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "form-urlencoded": "^4.2.1",
    "got": "^11.8.1",
    "jsonwebtoken": "^8.5.1",
    "mannish": "^4.0.1",
    "polka": "^0.5.2",
    "qs": "^6.9.6"
  }
}
